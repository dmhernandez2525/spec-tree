# Spec Tree - Environment Variables
# Copy this file to .env.local and fill in your values

# ===========================================
# Strapi CMS Configuration
# ===========================================
NEXT_PUBLIC_STRAPI_API_URL=http://localhost:1337
NEXT_PUBLIC_STRAPI_TOKEN=your_strapi_api_token_here

# ===========================================
# AI Microservice Configuration
# ===========================================
# The microservice that proxies OpenAI API calls
NEXT_PUBLIC_MICROSERVICE_URL=http://localhost:3001
NEXT_PUBLIC_MICROSERVICE_API_KEY=your_microservice_api_key_here

# ===========================================
# Stripe Payment Configuration
# ===========================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_STRIPE_STARTER_PRICE_ID=price_starter_id
NEXT_PUBLIC_STRIPE_PRO_PRICE_ID=price_pro_id
NEXT_PUBLIC_STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_id

# ===========================================
# Optional: Third-party Integrations
# ===========================================
# Google Places API (for location features)
# Note: This should be a server-side variable, not NEXT_PUBLIC_
# GOOGLE_PLACES_API_KEY=your_google_places_api_key

# ===========================================
# Legacy/Unused (can be removed if not needed)
# ===========================================
# NEXT_PUBLIC_API_URL=http://localhost:1337
